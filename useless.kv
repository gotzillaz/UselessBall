#:kivy 1.8.0

<UselessBall>:
    size: 50,50
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<UselessJoy>:
    size: 30,30
    canvas:
        Color:
            rgba: 1,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<UselessGame>
    ball: game_ball
    joy: game_joy

    Label:         
        font_size: 70
        center_x: (root.width * 3) / 4
        top: root.top - 50
        text: "%d,%d" % (self.parent.ball.x, self.parent.ball.y)
    
    UselessBall:
        id: game_ball
        center: self.parent.center

    UselessJoy:
        id: game_joy
        center_x: (root.width) / 10
        top: 70
