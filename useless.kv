#:kivy 1.8.0

<UselessBall>:
    size: 50,50
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<UselessJoy>:
    size: 20, 20
    canvas:
        Color:
            rgba: 1,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<UselessGame>
    ball: game_ball
    randomball: bounce_randomball
    joy: game_joy

    Label:         
        font_size: 50
        center_x: (root.width * 3) / 4
        top: root.top - 50
        text: "%d,%d" % (self.parent.ball.x, self.parent.ball.y)

    Label:
        font_size: 30
        x: (root.width) / 10 * 3
        top: 100
        text: "<- Use this small dot to move a big dot"

    Label:
        font_size: 50
        center_x: (root.width * 3) / 4 - 30
        top: root.top - 120
        text: "Hit: %d" % (self.parent.hit_count)

    UselessBall:
        id: game_ball
        center: self.parent.center

    UselessBall:
        id: bounce_randomball
        center: 25, root.top-25

    UselessJoy:
        id: game_joy
        center_x: (root.width) / 10
        top: 70
